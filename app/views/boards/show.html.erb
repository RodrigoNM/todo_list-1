<div class="container">
  <h1>
    <%= @board.title %>
  </h1>
  <div class="row">
    <div class="col">
      <div class="card">
        <%= render @board.tasks%>
      </div>
    </div>

    <div class="col-4">
      <%= render "tasks/form" %>
      <div class="btn-group">
        <%= link_to 'Edit', edit_board_path(@board), class: "btn btn-sm btn-primary text-light" %>
        <%= link_to 'Back', boards_path , class: "btn btn-sm btn-primary text-light" %>
      </div>
    </div>

  </div>