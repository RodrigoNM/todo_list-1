<div class="site-header bg-primary text-light font-weight-bolder">
  <div>TODO LIST</div>
  <p id="notice"><%= notice %></p>
</div>
<div class="container">

  <p>
    <%= link_to 'New Board', new_board_path, class:" btn btn-primary btn-lg text-light" %>
  </p>
  <div class="row">
    <% @boards.each do |board| %>
    <div class="card m-2 bg-primary" style="width: 20rem;">
      <div class="card-body">
        <div class="card-title font-weight-bold text-white">
          TITLE
        </div>
        <div class="card-subtitle mb-2 text-white"><%= board.title %></div>
        <div class="d-flex justify-content-between align-items-center">
          <div class="card bg-light">
            <div class="btn-group  ">
              <%= link_to 'Show', board, class: "btn btn-light btn-sm " %>
              <%= link_to 'Edit', edit_board_path(board), class:"btn btn-light btn-sm "  %>
              <%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light btn-sm " %>
            </div>
          </div>
        </div>

      </div>
    </div>
    <%end%>
  </div>
</div>